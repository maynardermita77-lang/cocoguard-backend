# Backend Configuration
DATABASE_URL=sqlite:///./cocoguard.db
# For MySQL: DATABASE_URL=mysql+pymysql://user:password@localhost/cocoguard_db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-with-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# File Upload
MAX_UPLOAD_SIZE=5242880
UPLOAD_DIR=./uploads

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","http://127.0.0.1:3000"]

# Email / SMTP Configuration (required for verification codes & password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=CocoGuard

# API Settings
API_TITLE=CocoGuard API
API_VERSION=1.0.0
API_DESCRIPTION=Coconut Pest Detection and Management System
